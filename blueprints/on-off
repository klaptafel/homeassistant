blueprint:
  name: Aan/Uit Automatisering
  description: Eenvoudige blueprint om acties uit te voeren bij aan- en uit-triggers
  domain: automation
  input:
    trigger_on:
      name: Aan Trigger
      description: Entiteit(en) die de "aan" actie triggeren
      selector:
        entity:
          multiple: true
    trigger_on_state:
      name: Aan Status
      description: Naar welke status moet de entiteit gaan om te triggeren?
      default: "on"
      selector:
        text:
    trigger_off:
      name: Uit Trigger
      description: Entiteit(en) die de "uit" actie triggeren
      selector:
        entity:
          multiple: true
    trigger_off_state:
      name: Uit Status
      description: Naar welke status moet de entiteit gaan om te triggeren?
      default: "off"
      selector:
        text:
    action_on:
      name: Aan Acties
      description: Acties die uitgevoerd worden bij "aan"
      default: []
      selector:
        action: {}
    action_off:
      name: Uit Acties
      description: Acties die uitgevoerd worden bij "uit"
      default: []
      selector:
        action: {}

mode: single
max_exceeded: silent

triggers:
  - trigger: state
    entity_id: !input trigger_on
    to: !input trigger_on_state
    id: Aan
  - trigger: state
    entity_id: !input trigger_off
    to: !input trigger_off_state
    id: Uit

conditions: []

actions:
  - choose:
      - conditions:
          - condition: trigger
            id:
              - Aan
        sequence: !input action_on
      - conditions:
          - condition: trigger
            id:
              - Uit
        sequence: !input action_off
