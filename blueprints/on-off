blueprint:
  name: On/Off Automation
  description: |
    Define two separate situations:
      - IF something happens → THEN ON actions
      - IF something else happens → THEN OFF actions
  domain: automation
  input:
    on_if:
      name: IF (ON)
      description: Trigger(s) that initiate the ON actions.
      default: []
      selector:
        trigger: {}
    on_then:
      name: THEN (ON)
      description: Actions to execute when the ON trigger fires.
      default: []
      selector:
        action: {}
    off_if:
      name: IF (OFF)
      description: Trigger(s) that initiate the OFF actions.
      default: []
      selector:
        trigger: {}
    off_then:
      name: THEN (OFF)
      description: Actions to execute when the OFF trigger fires.
      default: []
      selector:
        action: {}

mode: single

trigger:
  - !input on_if
  - !input off_if

action:
  - choose:
      - conditions:
          - condition: trigger
            id: on
        sequence: !input on_then
      - conditions:
          - condition: trigger
            id: off
        sequence: !input off_then