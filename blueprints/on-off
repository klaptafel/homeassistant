blueprint:
name: Aan Uit Automatisering
domain: automation
input:
aan_trigger:
name: AAN Trigger
selector:
object: {}
aan_actions:
name: AAN Acties
selector:
action: {}
uit_trigger:
name: UIT Trigger
selector:
object: {}
uit_actions:
name: UIT Acties
selector:
action: {}

trigger:

- <<: !input aan_trigger
  id: aan
- <<: !input uit_trigger
  id: uit

conditions: []

action:

- choose:
  - conditions:
    - condition: trigger
      id:
      - aan
        sequence: !input aan_actions
  - conditions:
    - condition: trigger
      id:
      - uit
        sequence: !input uit_actions

mode: single