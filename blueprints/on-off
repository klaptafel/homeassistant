blueprint:
name: Aan Uit Automatisering
domain: automation
input:
on_trigger:
name: AAN Trigger
selector:
object: {}
on_actions:
name: AAN Acties
selector:
action: {}
off_trigger:
name: UIT Trigger
selector:
object: {}
off_actions:
name: UIT Acties
selector:
action: {}

trigger:

- id: on
  platform: !input on_trigger.platform
  at: !input on_trigger.at
  entity_id: !input on_trigger.entity_id
  to: !input on_trigger.to
- id: off
  platform: !input off_trigger.platform
  at: !input off_trigger.at
  entity_id: !input off_trigger.entity_id
  to: !input off_trigger.to

action:

- choose:
  - conditions:
    - condition: trigger
      id: on
      sequence: !input on_actions
  - conditions:
    - condition: trigger
      id: off
      sequence: !input off_actions

mode: single