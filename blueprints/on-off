blueprint:
name: Aan Uit Automatisering
domain: automation
input:
on_trigger:
name: AAN Trigger
selector:
object: {}
on_actions:
name: AAN Acties
selector:
action: {}
off_trigger:
name: UIT Trigger
selector:
object: {}
off_actions:
name: UIT Acties
selector:
action: {}

variables:
on_trigger_with_id: >
{% set trigger = on_trigger %}
{% set trigger = dict(trigger, id=‘on’) %}
{{ trigger }}
off_trigger_with_id: >
{% set trigger = off_trigger %}
{% set trigger = dict(trigger, id=‘off’) %}
{{ trigger }}

trigger:

- “{{ on_trigger_with_id }}”
- “{{ off_trigger_with_id }}”

action:

- choose:
  - conditions:
    - condition: trigger
      id: on
      sequence: !input on_actions
  - conditions:
    - condition: trigger
      id: off
      sequence: !input off_actions

mode: single