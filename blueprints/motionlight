blueprint:
  name: „Üù Licht bij beweging
  description: Schakelt het licht aan bij beweging en uit wanneer er geen beweging meer wordt gedetecteerd.
  domain: automation
  source_url: https://github.com/klaptafel/homeassistant/blob/main/blueprints/motionlightcomponents/automation/blueprints/motion_light.yaml
  author: klaptafel
  input:
    motion_entity:
      name: Bewegingssensor
      selector:
        entity:
          filter:
            - device_class: occupancy
              domain: binary_sensor
            - device_class: motion
              domain: binary_sensor
    light_target:
      name: Verlichting
      selector:
        target:
          entity:
            domain: light
    no_motion_wait:
      name: Vertraging bij uitschakelen
      description: Zonder vertraging wordt de verlichting direct uitgeschakeld wanneer er geen beweging meer wordt gedetecteerd.
      default: 2
      selector:
        number:
          min: 0
          max: 60
          unit_of_measurement: minutes
    light_off_transition:
      name: Uitschakelduur
      description: In deze tijdsduur dimt de verlichting tot 0% (uit), mits de verlichting dit ondersteund.
      default: 2
      selector:
        number:
          min: 0
          max: 120
          unit_of_measurement: seconds
    conditions:
      name: "Geavanceerd: Voorwaarden (optioneel)"
      description: Deze automatisering wordt alleen uitgevoerd als deze template 'true' is.
      selector:
        template: {}
      

# If motion is detected within the delay,
# we restart the script.
mode: restart
max_exceeded: silent

triggers:
  trigger: state
  entity_id: !input motion_entity
  from: "off"
  to: "on"

conditions:
  - condition: template
    value_template: !input condition_template

actions:
  - alias: "Verlichting inschakelen"
    action: light.turn_on
    target: !input light_target
  - alias: "Wacht tot er geen beweging meer wordt gedetecteerd"
    wait_for_trigger:
      trigger: state
      entity_id: !input motion_entity
      from: "on"
      to: "off"
  - alias: "Vertraging"
    delay: !input no_motion_wait
  - alias: "Turn off the light"
    action: light.turn_off
    target: !input light_target
    data:
      transition: !input light_off_transition
