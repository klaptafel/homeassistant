blueprint:
  name: Aan/Uit Automatisering
  description: Eenvoudige blueprint om acties uit te voeren bij aan- en uit-triggers
  domain: automation
  input:
    entity_on:
      name: Aan Entiteit(en)
      description: Entiteit(en) die de "aan" actie triggeren
      selector:
        entity:
          multiple: true
    state_on:
      name: Aan Status
      description: Status die de "aan" actie triggert
      default: "on"
    action_on:
      name: Aan Acties
      description: Acties die uitgevoerd worden bij "aan"
      default: []
      selector:
        action: {}
    
    entity_off:
      name: Uit Entiteit(en)
      description: Entiteit(en) die de "uit" actie triggeren
      selector:
        entity:
          multiple: true
    state_off:
      name: Uit Status
      description: Status die de "uit" actie triggert
      default: "off"
    action_off:
      name: Uit Acties
      description: Acties die uitgevoerd worden bij "uit"
      default: []
      selector:
        action: {}

mode: single
max_exceeded: silent

trigger:
  - platform: state
    entity_id: !input entity_on
    to: !input state_on
    id: Aan
  - platform: state
    entity_id: !input entity_off
    to: !input state_off
    id: Uit

condition: []

action:
  - choose:
      - conditions:
          - condition: trigger
            id: Aan
        sequence: !input action_on
      - conditions:
          - condition: trigger
            id: Uit
        sequence: !input action_off
