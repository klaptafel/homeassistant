blueprint:
name: Aan Uit Automatisering
domain: automation
input:
aan_trigger:
name: AAN Trigger
selector:
trigger: {}
aan_actions:
name: AAN Acties
selector:
action: {}
uit_trigger:
name: UIT Trigger
selector:
trigger: {}
uit_actions:
name: UIT Acties
selector:
action: {}

trigger:

- id: aan
  <<: !input aan_trigger
- id: uit
  <<: !input uit_trigger

condition: []

action:

- choose:
  - conditions:
    - condition: trigger
      id: aan
      sequence: !input aan_actions
  - conditions:
    - condition: trigger
      id: uit
      sequence: !input uit_actions

mode: single