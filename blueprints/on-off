blueprint:
  name: On/Off Automation
  description: |
    Define one ON trigger with actions and one OFF trigger with actions.
    This blueprint automatically assigns the correct IDs so you donâ€™t have to.
  domain: automation
  input:
    on_trigger:
      name: ON - Trigger
      description: When should the ON actions run?
      selector:
        trigger: {}
    on_actions:
      name: ON - Actions
      description: Actions to perform when the ON trigger fires.
      default: []
      selector:
        action: {}
    off_trigger:
      name: OFF - Trigger
      description: When should the OFF actions run?
      selector:
        trigger: {}
    off_actions:
      name: OFF - Actions
      description: Actions to perform when the OFF trigger fires.
      default: []
      selector:
        action: {}

mode: single

trigger:
  - id: on
    !input on_trigger
  - id: off
    !input off_trigger

action:
  - choose:
      - conditions:
          - condition: trigger
            id: on
        sequence: !input on_actions
      - conditions:
          - condition: trigger
            id: off
        sequence: !input off_actions