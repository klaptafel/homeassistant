blueprint:
  name: Send notification
  description: >-
    A script that announces a message on a media player using text-to-speech.
  domain: script
  input:
    notify:
      selector:
        object: {}
      name: Notify service

mode: queued

fields:
  message:
    selector:
      text:
        multiline: true
    name: Message
    description: The message to send
    required: true

sequence:
- action: !input notify
  data:
    message: "{{ message }}"