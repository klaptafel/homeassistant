blueprint:
name: Aan Uit Automatisering
domain: automation
input:
aan_trigger:
name: AAN Trigger
aan_actions:
name: AAN Acties
uit_trigger:
name: UIT Trigger
uit_actions:
name: UIT Acties

trigger:

- id: aan
  <<: !input aan_trigger
- id: uit
  <<: !input uit_trigger

condition: []

action:

- choose:
  - conditions:
    - condition: trigger
      id:
      - aan
        sequence: !input aan_actions
  - conditions:
    - condition: trigger
      id:
      - uit
        sequence: !input uit_actions

mode: single