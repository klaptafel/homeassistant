blueprint:
  name: Aan/Uit Automatisering
  description: Eenvoudige blueprint om acties uit te voeren bij aan- en uit-triggers
  domain: automation
  input:
    trigger_on:
      name: Aan Trigger(s)
      description: Trigger(s) die de "aan" actie activeren
      default: []
      selector:
        trigger:
    action_on:
      name: Aan Acties
      description: Acties die uitgevoerd worden bij "aan"
      default: []
      selector:
        action: {}
    
    trigger_off:
      name: Uit Trigger(s)
      description: Trigger(s) die de "uit" actie activeren
      default: []
      selector:
        trigger:
    action_off:
      name: Uit Acties
      description: Acties die uitgevoerd worden bij "uit"
      default: []
      selector:
        action: {}

mode: single
max_exceeded: silent

trigger:
  - id: Aan
    !input trigger_on
  - id: Uit
    !input trigger_off

conditions: []

actions:
  - choose:
      - conditions:
          - condition: trigger
            id:
              - Aan
        sequence: !input action_on
      - conditions:
          - condition: trigger
            id:
              - Uit
        sequence: !input action_off
