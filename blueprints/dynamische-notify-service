blueprint:
  name: ã† Dynamische Notify Service
  description: >
    Configureerbare melding naar een specifieke ontvanger of automatisch aan de hand van sensorgegevens.
    Alle entiteiten en notify-services worden door de gebruiker ingesteld.
  domain: script
  input:
    recipients:
      name: Ontvangersconfiguratie
      description: >
        Configureer notify-services en bijbehorende sensors voor elke ontvanger.
        Voeg elke ontvanger toe als een object met `notify_service` en `home_sensor`.
      default: []
      selector:
        object: {}
    recipient:
      name: Ontvanger
      description: Wie moet de melding ontvangen?
      selector:
        select:
          mode: dropdown
          options:
            - label: Specifieke ontvanger
              value: specifiek
            - label: Iedereen
              value: iedereen
            - label: Automatisch (op basis van thuisstatus)
              value: automatisch
      default: iedereen
    interruption_level:
      name: Attentiewaarde
      description: Prioriteitsniveau van de melding.
      default: active
      selector:
        select:
          mode: dropdown
          options:
            - label: Normaal
              value: active
            - label: Stil
              value: passive
            - label: Belangrijk
              value: time-sensitive
            - label: Kritiek
              value: critical

fields:
  title:
    name: Titel
    description: Titel van de melding.
    selector:
      text: {}
    required: false  # Optioneel bij uitvoering
  message:
    name: Bericht
    description: Inhoud van de melding.
    selector:
      text: {}
    required: false  # Optioneel bij uitvoering
  group:
    name: Groep
    description: Groepeer notificaties.
    selector:
      text: {}
    default: ""  # Optioneel, leeg als er geen groep is
  tag:
    name: Tag
    description: Notificaties met dezelfde tag worden vervangen.
    selector:
      text: {}
    default: ""  # Optioneel, leeg als er geen tag is
  image:
    name: Afbeelding
    description: URL van een afbeelding om bij te voegen.
    selector:
      text: {}
    default: ""  # Optioneel, leeg als er geen afbeelding is
  camera:
    name: Camera
    description: Selecteer een camera-entiteit.
    selector:
      entity:
        domain: camera
    default: null  # Optioneel, leeg als er geen camera is
  actions:
    name: Acties
    description: Optionele acties voor de notificatie.
    selector:
      object: {}
    default: {}  # Optioneel, geen acties